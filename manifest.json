{
    "manifest_version": 2,

    "name": "Aliaser",
    "description": "Allows users to set aliases",
    "version": "1.4",

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "options_page": "settings.html",
    "content_scripts": [
        {
            "js": ["js/script.js"],
            "matches": ["http://*/*", "https://*/*"]
        }
    ],
    "permissions": ["storage", "http://*/*", "https://*/*"]
}

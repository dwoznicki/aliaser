{
  "manifest_version": 3,
  "name": "Aliaser",
  "description": "Allows users to set aliases",
  "version": "1.4",
  "options_page": "settings.html",
  "content_scripts": [
    {
      "js": [
        "js/script.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "storage"
  ],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_security_policy": {},
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}